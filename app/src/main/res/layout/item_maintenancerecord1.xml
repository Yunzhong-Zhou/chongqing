<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#f7f7f7">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/yuanxing_lanse"
            android:gravity="center"
            android:text="工"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="姓名"
            android:textColor="@color/black1"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="2017-12-7 15:45:18"
            android:textColor="#928d8d" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="#f2f2f2">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="施工描述：表现为过了沉降期依然下沉不止，不均匀沉降导致楼体整体强度不够。表现为过了沉降期依然下沉不止，不均匀沉降导致楼体整体强度不够。"
        android:padding="10dp"
        android:lineSpacingExtra="5dp"
        android:background="#f2f2f2"
        android:textColor="#807f7f"/>
</LinearLayout>