<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f5f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!--图片选择器-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">

            <com.zhitiekeji.equipmentmanagement.view.photochooser.AutoHeightGridView
                android:id="@+id/gridView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="62dp"
                android:horizontalSpacing="8dp"
                android:numColumns="auto_fit"
                android:scrollbars="none"
                android:verticalSpacing="8dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/tupian" />

                    <ImageView
                        android:id="@+id/delete1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:onClick="onClick"
                        android:src="@mipmap/dajiawen_butongyi1"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="（门牌号）"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black3"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/tupian" />

                    <ImageView
                        android:id="@+id/delete2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:onClick="onClick"
                        android:src="@mipmap/dajiawen_butongyi1"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="（设备正面）"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black3"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/tupian" />

                    <ImageView
                        android:id="@+id/delete3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:onClick="onClick"
                        android:src="@mipmap/dajiawen_butongyi1"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="（设备侧面）"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black3"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:text="#请按下列示范添加照片"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/headimg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="第一张"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/headimg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="第二张"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/headimg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="第三张"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black3" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="8"
        android:gravity="top"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:hint="*详细信息（选填）"
        android:layout_marginTop="10dp"
        android:textColorHint="#cfcfcf"
        android:background="@color/white"/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_yuanjiao_lanse"
            android:gravity="center"
            android:padding="10dp"
            android:onClick="onClick"
            android:text="确认发布"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>