<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/black5" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/yuanxing_lanse"
                android:gravity="center"
                android:text="上报"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/black1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yuanjiao_2_lvse"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="已通过"
            android:textColor="@color/white"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="综合维修"
            android:textColor="@color/txt_red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="2017-12-7 15:45:18"
            android:textColor="@color/black4"
            android:textSize="12sp"/>

    </LinearLayout>

    <!--签字文件-->
    <LinearLayout
        android:id="@+id/linearLayout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/black5" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/yuanxing_lanse"
                android:gravity="center" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签字"
            android:textColor="@color/black3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biezhen"
            android:paddingLeft="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="查看"
                android:textColor="@color/black4"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black4"/>
        </LinearLayout>

    </LinearLayout>

    <!--上传文件-->
    <LinearLayout
        android:id="@+id/linearLayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/black5" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/yuanxing_lanse"
                android:gravity="center" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已上传"
            android:textColor="@color/black3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biezhen"
            android:paddingLeft="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="施工计划"
                android:textColor="@color/black4"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black4"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/black4"/>

    </LinearLayout>

    <!--工程预算-->
    <LinearLayout
        android:id="@+id/linearLayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/black5" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/yuanxing_lanse"
                android:gravity="center" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工程预算"
            android:textColor="@color/black3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20万"
            android:textSize="14sp"
            android:layout_marginLeft="14dp"
            android:textColor="@color/red"/>

    </LinearLayout>
    <!--施工计划-->
    <LinearLayout
        android:id="@+id/linearLayout_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/black5" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/yuanxing_lanse"
                android:gravity="center" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="施工管理"
            android:textColor="@color/black3" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:textSize="14sp"
            android:layout_marginLeft="14dp"
            android:textColor="@color/red"/>

    </LinearLayout>

    <!--不通过-->
    <LinearLayout
        android:id="@+id/linearLayout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/black5" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/yuanxing_lanse"
                android:gravity="center" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不通过理由："
            android:textColor="@color/black3" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_add"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <!--底部缩放-->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/black5" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/downimg4" />
        </LinearLayout>

        <!--<TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/next"
            android:text="共2条"
            android:textColor="@color/black3"
            android:textSize="12sp" />-->

    </LinearLayout>
</LinearLayout>