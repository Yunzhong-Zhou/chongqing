<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <com.zhitiekeji.equipmentmanagement.view.FragmentIndicator4
        android:paddingTop="0.5dp"
        android:id="@+id/indicator"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray" />
    <fragment
        android:id="@+id/fragment1"
        class="com.zhitiekeji.equipmentmanagement.fragment.ReportPersonDiseaseListFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/indicator"
        tools:layout="@layout/fragment_reportpersondieaselist" />
    <fragment
        android:id="@+id/fragment2"
        class="com.zhitiekeji.equipmentmanagement.fragment.ReportPersonMineFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/indicator"
        tools:layout="@layout/fragment_reportpersonmine" />
</RelativeLayout>