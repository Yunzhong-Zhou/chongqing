<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:src="@mipmap/back2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="48dp"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/lightblue500"
            android:textSize="18sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/txt_black3"
        android:visibility="gone"/>

    <!--内容区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_left_5_huise"
            android:padding="10dp"
            android:src="@mipmap/changepassword1" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@drawable/yuanjiao_right_5_huise"
            android:hint="请输入手机号"
            android:padding="10dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColorHint="#a5a6a7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_huangse"
            android:padding="10dp"
            android:onClick="onClick"
            android:text="发送验证码"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/yuanjiao_right_5_huise"
            android:hint="请输入验证码"
            android:padding="10dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColorHint="#a5a6a7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_left_5_huise"
            android:padding="10dp"
            android:src="@mipmap/changepassword2" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@drawable/yuanjiao_right_5_huise"
            android:hint="请输入新手机号"
            android:padding="10dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColorHint="#a5a6a7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_left_5_huise"
            android:padding="10dp"
            android:src="@mipmap/changepassword2" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@drawable/yuanjiao_right_5_huise"
            android:hint="请再次输入新手机号"
            android:padding="10dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColorHint="#a5a6a7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_left_5_huise"
            android:padding="10dp"
            android:src="@mipmap/changepassword2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@drawable/yuanjiao_right_5_huise"
            android:hint="请再输入一次密码"
            android:padding="10dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColorHint="#a5a6a7" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_yuanjiao_lanse"
        android:gravity="center"
        android:padding="10dp"
        android:onClick="onClick"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>